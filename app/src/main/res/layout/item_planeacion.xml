<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:padding="8dp">
                    <TextView
                        android:text="Periodo: "
                        android:textStyle="bold"
                        android:layout_column="0"/>
                    <TextView
                        android:id="@+id/txvPeriodo"
                        android:text="Periodo"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow android:padding="8dp">
                    <TextView
                        android:text="Actividad: "
                        android:textStyle="bold"
                        android:layout_column="0"/>
                    <TextView
                        android:id="@+id/txvActividad"
                        android:text="Nombre Actividad"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow android:padding="8dp">
                    <TextView
                        android:text="DescripciÃ³n: "
                        android:textStyle="bold"
                        android:layout_column="0"/>
                    <TextView
                        android:id="@+id/txvDescripcion"
                        android:text="Ver... "
                        android:textColor="@color/colorAccent"
                        android:fontFamily=""
                        android:layout_column="1"/>
                </TableRow>
                <TableRow android:padding="8dp">
                    <TextView
                        android:text="Fecha: "
                        android:textStyle="bold"
                        android:layout_column="0"/>
                    <TextView
                        android:id="@+id/txvFecha"
                        android:text="2018/01/01"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow android:padding="8dp">
                    <TextView
                        android:text="Hora: "
                        android:textStyle="bold"
                        android:layout_column="0"/>
                    <TextView
                        android:id="@+id/txvHora"
                        android:text="00:00"
                        android:layout_column="1"/>
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <com.rey.material.widget.FloatingActionButton
                    android:id="@+id/btnCheck"
                    android:layout_width="54dp"
                    android:layout_height="55dp"/>

            </LinearLayout>


        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>